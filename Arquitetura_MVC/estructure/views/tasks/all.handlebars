<h1>Todas as tasks</h1>
<ul class="task-list">
  {{#each tasks as |alias|}}
    <li class="listagem">
      {{#if this.done}}
        <a href="/" class="title done">{{this.title}}</a>
      {{else}}
        <a href="/" class="title">{{this.title}}</a>
      {{/if}}
      <div class="actions">
        <form action="/tasks/updateStatus" method="POST">
          <input type="hidden" name="id" value="{{this.id}}" />
          <input type="hidden" name="done" value="{{this.done}}" />
          <button type="submit">
            <i class="bi bi-check2-square"></i>
          </button>
        </form>
        <a href="/tasks/edit/{{this.id}}"><i
            class="bi bi-pencil-square"
          ></i></a>
        <form action="/tasks/remove" method="POST">
          <input type="hidden" name="id" value="{{this.id}}" />
          <button type="submit">
            <a href="/"><i class="bi bi-x-lg"></i></a>
          </button>
        </form>

      </div>
    </li>
  {{/each}}
</ul>