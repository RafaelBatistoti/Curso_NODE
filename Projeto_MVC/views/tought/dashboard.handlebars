<div>
  <div>
    <h2 class="mb-3">Dashboard</h2>
    <a
      href="/tought/add"
      class="border border-dark p-2 rounded bg-blue text-center text-decoration-none text-black"
    >Criar pensamento</a>
  </div>
  <h4 class="mt-3">Seus Pensamentos</h4>
  <ul class="list-group list-group-flush">
    {{#each toughts}}
      <li class="list-group-item">
        <h5 class="text-info">{{this.title}}</h5>
        <span class="d-block mt-3">
          <a
            href="/tought/edit/{{this.id}}"
            class="border rounded p-1 text-decoration-none bg-secondary text-white"
          >Editar</a>
        </span>
        <form action="/tought/remove" method="POST" class="mt-3">
          <input type="hidden" name="id" value="{{this.id}}" />
          <input type="submit" value="Excluir" class="border-none" />
        </form>
      </li>
    {{/each}}
  </ul>
  {{#if emptyTought}}
    <p><small>Ainda não há nenhum pensamento seu</small>. <a  href="/tought/add" class="text-decoration-none"><small>Crie aqui </small></a></p>
  {{/if}}
</div>