<h2>Editando: {{user.name}} </h2>
<form action="/user/update" method="POST" class="form">
  <input type="hidden" name="id" value="{{user.id}}" />
  <div class="form-group">
    <label for="name">Nome</label>
    <input
      type="text"
      name="name"
      value="{{user.name}}"
      placeholder="Digite o nome do Usuário"
    />
  </div>
  <div class="form-group">
    <label for="occupation">Ocupação</label>
    <input
      type="text"
      name="occupation"
      value="{{user.occupation}}"
      placeholder="Digite a profissão"
    />
  </div>
  <div class="form-group form-checkbox">
    {{#if user.newsletter}}
      <input type="checkbox" name="newsletter" checked />
    {{else}}
      <input type="checkbox" name="newsletter" />
    {{/if}}
    <label for="newsletter">Enviar promoção</label>
  </div>
  <input type="submit" value="Cadastrar" class="btn btn-primary" />
</form>
<div class="adress-containers">
  <h2>Adress</h2>
  <form action="/adress/create" method="POST" class="form">
    <input type="hidden" name="UserId" value="{{user.id}}" />
    <div class="form-control">
      <label for="street">Rua</label>
      <input type="text" name="street" placeholder="Digite o nome da rua" />
    </div>
    <div class="form-control">
      <label for="number">Número</label>
      <input
        type="text"
        name="number"
        placeholder="Digite o número da residência"
      />
    </div>
    <div class="form-control">
      <label for="city">Cidade</label>
      <input type="text" name="city" placeholder="Digite o nome da cidade" />
    </div>
    <input type="submit" value="Incluir endereço" class="btn btn-primary" />
  </form>
  <div class="adress-list">
    <h3>Lista de endereços</h3>
    {{#each user.Adresses as |alias|}}
      <p>#{{this.id}} - {{this.street}} - {{this.number}} - {{this.city}}</p>
      <form action="/adress/delete" method="POST">
        <input type="hidden" name="UserId" value="{{this.UserId}}" />
        <input type="hidden" name="id" value="{{this.id}}" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
      </form>
    {{/each}}
  </div>
</div>